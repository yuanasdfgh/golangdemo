    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    //miniprogram-api-typings"小程序提示
    "types": ["@dcloudio/types","miniprogram-api-typings"],
